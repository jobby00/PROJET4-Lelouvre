    <div class="form-check">
        {{ form_label(form.tarifReduit, 'Tarif reduit') }}
        {{ form_errors(form.tarifReduit) }}
        {{ form_widget(form.tarifReduit, {'attr': {'class': 'form-check-input', 'id': 'tarifReduit'}}) }}
