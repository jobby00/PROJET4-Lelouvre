        <span id="nomVide"></span>
    </div>
    <div class="form-group">
        {{ form_label(form.prenom, 'Prenom') }}
        {{ form_errors(form.prenom) }}
        {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'id': 'prenom'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.pays, 'Pays') }}
        {{ form_errors(form.pays) }}
        {{ form_widget(form.pays, {'attr': {'class': 'form-control', 'id': 'pays'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.dateNaissance, 'Date de naissance') }}
        {{ form_errors(form.dateNaissance) }}
        {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control', 'id': 'dateNaissance'}}) }}
